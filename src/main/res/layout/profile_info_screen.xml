<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Address"
            android:layout_above="@+id/citystate"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/enter"
            android:onClick="addInfoToProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Enter"
            android:layout_marginBottom="183dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/citystate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="City and State"
            android:layout_above="@+id/zipcode"
            android:layout_alignLeft="@+id/address"
            android:layout_alignStart="@+id/address" />

        <EditText
            android:id="@+id/zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ZIP Code"
            android:layout_marginBottom="50dp"
            android:layout_above="@+id/enter"
            android:layout_alignLeft="@+id/citystate"
            android:layout_alignStart="@+id/citystate" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Phone"
            android:layout_above="@+id/address"
            android:layout_alignLeft="@+id/address"
            android:layout_alignStart="@+id/address" />

    </RelativeLayout>
</RelativeLayout>